
<%= simple_form_for(@journey) do |f| %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: 'Title' %>
    <%= f.input :duration, placeholder: 'Duration (minutes)'  %>
    <%= f.input :price, placeholder: 'Price (euros)'  %>
    <%= f.input :exterior, as: :boolean, inline_label: 'This journey is in exterior' %>
    <%= f.input :interest, collection: Journey::INTERESTS, input_html: { multiple: true }, , placeholder: 'Select interests (several possible)'  %>
    <%= f.input :sense, collection: Journey::SENSES, input_html: { multiple: true }, placeholder: 'Select senses (several possible)'  %>
    <%= f.input :popularity, placeholder: 'Popularity (between 1 and 10)'  %>
    <%= f.input :anecdote, placeholder: 'Tell a story about this journey!'  %>
    <%= f.input :environment, collection: Journey::ENVIRONMENTS, input_html: { multiple: true }, placeholder: 'Select environment (several possible)' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
