<h4>Hello traveller!</h4>
<br>
<h3>Your infos:</h3>
<br>
<%# <p>Name: <%= @user.full_name --> to be added once coded %>
<p>Your email:<%= @user.email %></p>
<br>
<div class="bookings_wrap_one">
<h3>This are the bookings you declined: </h3>
   <% @user.bookings.each do |booking| %> 
    <div class="booking_card_one">
      <h3><%= booking.journey.title %></h3>
      <h3><%= booking.start_date %></h3>
      <h3><%= booking.status %></h3>
      <%= link_to "Decline this booking", 
                  booking_path(booking), 
                  method: :delete %>
      </div>
   <% end %>
</div>
<br>

<div class="bookings_wrap_two">
  <h3>This are the bookings you accepted:</h3>
  <% @user.bookings.each do |booking| %>
    <div class="booking_card_two">
      <h3><%= booking.journey.title %></h3>
      <h3><%= booking.start_date %></h3>
      <h3><%= booking.status %></h3>
      <%= link_to "Delete this booking", 
                  booking_path(booking), 
                  method: :delete %>

      <%= link_to 'Accept booking', accept_booking_path(booking)  %>
    </div>
  <% end %>
</div>
<br>
